{
    "name": "tournament-tables/tournament-tables",
    "description": "Tournament table allocation system",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "justinrainbow/json-schema": "^5.2",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "TournamentTables\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TournamentTables\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.4.33"
        }
    },
    "scripts": {
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose -f docker-compose.yml -f docker-compose.test.yml down",
        "test:unit": "docker-compose exec -w /var/www/app php ./vendor/bin/phpunit --testsuite unit,integration,performance,contract,e2e --process-isolation",
        "test:e2e": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up -d && docker-compose -f docker-compose.yml -f docker-compose.test.yml exec playwright npx playwright test",
        "migrate": "docker-compose exec php php bin/migrate.php",
        "seed": "docker-compose exec php php bin/seed-terrain-types.php"
    }
}
