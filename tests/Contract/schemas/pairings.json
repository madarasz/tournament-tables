{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "BCP Pairings Response",
    "description": "Minimal schema for BCP pairings API response. Only includes fields used by BCPApiService::parseApiResponse().",
    "type": "object",
    "required": ["active"],
    "properties": {
        "active": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["player1", "player2", "player1Game", "player2Game"],
                "properties": {
                    "player1": {
                        "$ref": "#/definitions/player"
                    },
                    "player2": {
                        "$ref": "#/definitions/player"
                    },
                    "player1Game": {
                        "$ref": "#/definitions/gameResult"
                    },
                    "player2Game": {
                        "$ref": "#/definitions/gameResult"
                    },
                    "table": {
                        "type": ["integer", "null"],
                        "description": "Table number (optional)"
                    }
                }
            }
        }
    },
    "definitions": {
        "player": {
            "type": "object",
            "required": ["id", "user"],
            "properties": {
                "id": {
                    "type": "string",
                    "minLength": 1,
                    "description": "BCP player ID"
                },
                "user": {
                    "type": "object",
                    "required": ["firstName", "lastName"],
                    "properties": {
                        "firstName": {
                            "type": "string",
                            "description": "Player first name"
                        },
                        "lastName": {
                            "type": "string",
                            "description": "Player last name"
                        }
                    }
                }
            }
        },
        "gameResult": {
            "type": "object",
            "required": ["points"],
            "properties": {
                "points": {
                    "type": ["number", "null"],
                    "description": "Player score for the game"
                }
            }
        }
    }
}
